# Configuración del Dashboard Carlos AI
# Copiar este archivo como .env y completar con los valores reales

# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration (si usas PostgreSQL en lugar de SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/carlos_dashboard

# Google Sheets API Configuration
GOOGLE_SHEETS_SERVICE_ACCOUNT_FILE=/path/to/your/service-account-key.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id-here

# External APIs
OPENAI_API_KEY=your-openai-api-key-here
MAKE_WEBHOOK_SECRET=your-make-webhook-secret

# Email Configuration (opcional para notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Security Settings (para producción)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Logging Level
LOG_LEVEL=INFO

# Carlos AI Specific Settings
CARLOS_MAX_CONVERSATIONS_PER_DAY=1000
CARLOS_DEFAULT_TIMEOUT=30
CARLOS_WEBHOOK_RETRY_COUNT=3

# Métricas y Analytics
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=90

# Configuración de Cache (opcional)
CACHE_BACKEND=locmem
CACHE_TIMEOUT=300

# WhatsApp Integration (si se usa)
WHATSAPP_API_TOKEN=your-whatsapp-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-verify-token

# Configuración de archivos estáticos en producción
USE_S3_STATIC_FILES=False
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_STORAGE_BUCKET_NAME=your-bucket-name

# Timezone
TIME_ZONE=America/Panama
